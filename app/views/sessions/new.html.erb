<!--Set title to page-->
<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<!--set some style to form sign in-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <!--create form user sign in-->
    <%= form_for(:session, url: signin_path) do |f| %>
    	<!--add label eamil and text field email to form-->
      <%= f.label :email %>
      <%= f.text_field :email %>
      <!--add label password and password field password to form-->
      <%= f.label :password %>
      <%= f.password_field :password %>
      <!--add button sign in to form-->
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>