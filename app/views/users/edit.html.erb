<!--set tilte to page-->
<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>
<!--set some style to update form-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!--create form for update user-->
    <%= form_for(@user) do |f| %>
      <!--show error message when user fill invalid information-->
      <%= render 'shared/error_messages' %>
      <!--add user name label and text field user name into update form-->
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <!--add user email label and text field user email into update form-->
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      <!--add user pass label and password field user password into update form-->
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <!--add user password confirmation label and password field user password confirmation into update form-->
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <!--add button update into update form-->
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
    <!--set image style-->
    <div class="gravatar_edit">
    <!--show image-->
      <%= gravatar_for @user %>
      <!--give link to update gravatar image cover-->
      <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>