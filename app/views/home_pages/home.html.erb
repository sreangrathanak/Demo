<% provide(:title, "Home") %>
<!--if user sign in-->
<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
      <!--load file at app/view /shared/_user_info.html.erb-->
        <%= render 'shared/user_info' %>
      </section>
      <section class="entry_form">
      <!--load file at app/view /shared/_user_info.html.erb-->
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Entry Feed</h3>
      <!--load file from app/view/shared/_feed.html.erb-->
      <%= render 'shared/feed'%>
    </div>
  </div>
<% else %>
	<div class="center jumbotron">
  		<h1>Welcome to the My Demo App</h1>
  		<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>
	<%= link_to image_tag("rathanakjame.jpg", alt: "Rathanak logo"),
            'https://www.facebook.com/sreang.rathanak' %>
<%end%>